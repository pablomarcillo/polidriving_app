<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorVehiculos"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_blanco"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".clases.principal.FragmentosVehiculo">

    <View
        android:id="@+id/divisorDatos1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imagenBanderaDatos"
        app:layout_constraintHorizontal_bias="0.656" />

    <!--
    <TextView
        android:id="@+id/txtRiesgoAccidente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/riesgo_accidente"
        android:textColor="@color/color_negro"
        android:textSize="34sp"
        tools:ignore="TextContrastCheck" />
    -->

    <LinearLayout
        android:id="@+id/grupoNivelVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <!--
        <ImageView
            android:id="@+id/imagenBanderaDatosVehiculo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/verde"
            android:visibility="invisible"
            tools:ignore="ContentDescription,ImageContrastCheck" />
        -->

        <TextView
            android:id="@+id/txtMedidaDatosVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/riesgo_calculando"
            android:textColor="@color/color_negro"
            android:textSize="34sp"
            tools:ignore="TextContrastCheck, TextSizeCheck" />

        <!--
        <TextView
            android:id="@+id/txtPorcentajeDatosVehiculo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="6dp"
            android:text="@string/medida_ejemplo"
            android:textColor="@color/color_negro"
            android:textSize="34sp"
            android:visibility="invisible"
            tools:ignore="TextContrastCheck, TextSizeCheck,VisualLintBounds" />
        -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grupoFechaVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtUltimaUpdateVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/last_update"
            android:textColor="@color/color_negro"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txtUltimaUpdateFechaVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/valor_ejemplo_2"
            android:textColor="@color/color_negro"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <View
        android:id="@+id/divisorDatos2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/txtDatoVelocidad" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVelocidadVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/velocidad_vehiculo"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaVelocidadVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRpmVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rpm_vehiculo"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaRpmVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTemperaturaVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/temperatura_motor"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaTemperaturaVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVoltajeVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/voltaje_sistema"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaVoltajeVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAceleradorVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lectura_throttle_position"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaAceleradorVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCargaVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/carga_motor"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaCargaVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDistanciaRecorridaVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/distancia_recorrida"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRespuestaDistanciaRecorridaVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:text="@string/valor_ejemplo_2"
                    android:textColor="@color/color_negro"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>