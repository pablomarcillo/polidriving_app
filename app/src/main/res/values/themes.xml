<!-- Creación del tema diurno de la APP -->
<!--suppress XmlUnusedNamespaceDeclaration -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.polidriving" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondaryVariant">@color/color_gradiente_lateral_dos</item>
        <item name="colorSecondary">@color/color_gradiente_lateral_uno</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/color_principal_noche</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="colorPrimary">@color/color_principal_dia</item>
        <item name="colorOnSecondary">@color/color_negro</item>
        <item name="colorOnPrimary">@color/color_blanco</item>
    </style>
    <style name="Theme.polidriving.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.polidriving.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.polidriving.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Base.Theme.polidriving" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    
    <!-- Estilo personalizado para TextInputLayout del diálogo de vehículo -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="boxBackgroundColor">@color/color_blanco</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>
    
</resources>