<?xml version="1.0" encoding="utf-8"?>
<!-- Segmento de código que permite crear colores personalizados para el cuadro de diálogo personalizado -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Color blanco desde los recursos -->
    <solid android:color="@color/color_blanco" />
    <!-- Redondeando las esquinas -->
    <corners android:radius="0dp" />
    <!-- Borde de color azul -->
    <stroke
        android:width="1dp"
        android:color="#9B9B9B" />
</shape>